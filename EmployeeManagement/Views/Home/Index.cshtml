@model IEnumerable<EmployeeManagement.Models.Employee> 
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Department</td>
                <td>@employee.EmailId</td>
                <td>@Html.ActionLink("View Using HTML Action Link method","details","home", new { id = @employee.Id })</td>
                <td><a href="@Url.Action("details","home",new { id= @employee.Id} )">View Using URL Action Method</a></td>
                <td><a asp-controller="home" asp-action="details" asp-route-id="@employee.Id">View Using Tag Helper Method</a></td>
            </tr>
            }
        </tbody>
    </table>
    <a> Create</a>
</body>

</html>
@*this is List view example*@
