@model IEnumerable<EmployeeManagement.Models.Employee> 

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "TestLayout";    
}

<table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Department</td>
                    <td>@employee.EmailId</td>
                </tr>
            }
        </tbody>
    </table>


